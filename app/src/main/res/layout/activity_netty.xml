<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NettyActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="example"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/startNettyServer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动服务器"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/startNettyClient_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端连接"
        android:layout_below="@id/startNettyServer_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/clientSendMsg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端发送数据"
        android:layout_below="@id/startNettyClient_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/stopNettyServer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务器发送数据"
        android:layout_below="@id/clientSendMsg_btn"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>